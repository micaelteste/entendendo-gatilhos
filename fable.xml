<fable>
	<page background="bg.png">
  
    <agent text="Clique no painel de controle para desbloquear a porta" 
      x="20" y="440" font-size="18" color="white" 
      width="300" on-trigger="unlocked">
      
    	<unlocked text="Acesso liberado! agora clique na porta para abrir" />
    </agent>
    
    <agent img="floor.png" x="0" y="0" width="100" height="100" />
    <agent img="floor2.png" x="100" y="0" width="100" height="100" />
    <agent img="floor2.png" x="200" y="0" width="100" height="100" />
    <agent img="floor2.png" x="300" y="0" width="100" height="100" />
    <agent img="floor3.png" x="400" y="0" width="100" height="100" />
    
    <agent 
      img="switchLock.png" x="100" y="100" width="30" 
      height="100" on-touch="unlocked">		 
    	
      <unlocked img="switchUnlocked.png" />    
    </agent>
    
    <agent 
      img="locked.png" x="200" y="100" width="125" 
      height="200" on-trigger="unlocked">
    	
      <unlocked img="unlocked.png" on-touch="open" />
      <open img="open.png" />
    </agent>
    
  </page>
</fable>